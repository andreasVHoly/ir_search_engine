#include  iostream.h  
#include  conio.h  
#include  stdio.h  
struct btree
{
    struct btree *left 
    struct btree *right 
    int no 
} 
void postorder(struct btree *trav) 
void inorder(struct btree *trav) 
void preorder(struct btree *trav) 
